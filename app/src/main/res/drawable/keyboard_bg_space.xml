<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:id="@+id/space_pressed" android:bottom="@dimen/dp6" android:left="@dimen/dp6" android:right="@dimen/dp6" android:state_pressed="true" android:top="@dimen/dp6">
                <shape android:shape="rectangle">
                    <solid android:color="@color/md_grey_600" />
                    <corners android:radius="@dimen/dp8" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:id="@+id/space_normal" android:bottom="@dimen/dp6" android:left="@dimen/dp6" android:right="@dimen/dp6" android:state_pressed="true" android:top="@dimen/dp6">
                <shape android:shape="rectangle">
                    <stroke android:color="#EFEFEF"
                        android:width="1dp"/>
                    <solid android:color="#FFFFFF" />
                    <corners android:radius="@dimen/dp8" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
